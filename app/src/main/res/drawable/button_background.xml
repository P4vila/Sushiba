<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFB74D" /> <!-- Color al presionar -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="@color/naranja" /> <!-- Color normal -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
